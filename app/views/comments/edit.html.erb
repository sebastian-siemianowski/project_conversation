<!-- app/views/comments/edit.html.erb -->
<div class="max-w-2xl mx-auto bg-white shadow-2xl rounded-lg p-8 mt-12">
  <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">Edit Comment</h1>

  <%= form_with(model: [@project, @comment], local: true, class: "space-y-6") do |form| %>
    <!-- Error Messages -->
    <% if @comment.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded-lg mb-6 shadow-sm">
        <div class="flex items-center mb-2">
          <svg class="h-6 w-6 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-3-3v6m-6 6h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
          <h2 class="text-lg font-semibold">
            <%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:
          </h2>
        </div>
        <ul class="list-disc pl-6 space-y-1">
          <% @comment.errors.full_messages.each do |message| %>
            <li class="text-sm"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Comment Content Field -->
    <div class="bg-gray-50 p-4 rounded-lg shadow-sm">
      <%= form.label :content, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <%= form.text_area :content, rows: 5, class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-300 ease-in-out" %>
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-6">
      <%= form.submit "Update Comment", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition ease-in-out duration-300 shadow-md" %>
    </div>
  <% end %>

  <!-- Back to Project Link -->
  <div class="text-center mt-8">
    <%= link_to 'Back to Project', project_path(@project), class: 'text-blue-500 hover:underline text-lg' %>
  </div>
</div>
