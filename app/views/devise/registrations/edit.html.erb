<div class="max-w-2xl mx-auto bg-white shadow-2xl rounded-lg p-10 mt-12">
  <h2 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-8") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :email, class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-lg shadow-inner mb-8">
        Currently waiting for confirmation for: <strong><%= resource.unconfirmed_email %></strong>
      </div>
    <% end %>

    <!-- Password Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :password, class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <p class="text-sm text-gray-500 mb-4">(Leave blank if you don't want to change it)</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500 mt-2"><em>Minimum <%= @minimum_password_length %> characters required</em></p>
      <% end %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :password_confirmation, class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <!-- Current Password Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :current_password, class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <p class="text-sm text-gray-500 mb-4">(We need your current password to confirm your changes)</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <!-- Role Selection -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :role, "Select Role", class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-10">
      <%= f.submit "Update", class: "w-full bg-gradient-to-r from-green-500 to-blue-600 hover:from-green-600 hover:to-blue-700 text-white font-semibold py-4 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
  <% end %>

  <!-- Cancel Account Section -->
  <h3 class="text-2xl font-semibold text-gray-800 mt-16 mb-6 text-center">Cancel my account</h3>
  <p class="text-sm text-gray-600 text-center mb-8">Unhappy? You can cancel your account below:</p>
  <div class="text-center mb-10">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 text-white font-semibold py-4 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105" %>
  </div>

  <!-- Back Link -->
  <div class="text-center mt-10">
    <%= link_to "Back", :back, class: "text-blue-500 hover:underline text-lg" %>
  </div>
</div>
