<%= turbo_frame_tag 'projects_list' do %>
  <div class="max-w-2xl mx-auto bg-white shadow-2xl rounded-lg p-10 mt-16">
    <h1 class="text-3xl font-extrabold text-gray-900 mb-10 text-center">Edit Comment</h1>

    <%= form_with(model: [@project, @comment], local: false, class: "space-y-8") do |form| %>
      <!-- Error Messages -->
      <% if @comment.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-6 rounded-lg mb-8 shadow-inner">
          <div class="flex items-center mb-4">
            <svg class="h-6 w-6 text-red-500 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-3-3v6m-6 6h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <h2 class="text-lg font-semibold">
              <%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:
            </h2>
          </div>
          <ul class="list-disc pl-6 space-y-2">
            <% @comment.errors.full_messages.each do |message| %>
              <li class="text-sm"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Comment Content Field -->
      <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
        <%= form.label :content, class: "block text-lg font-semibold text-gray-700 mb-3" %>
        <%= form.text_area :content, rows: 5, class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
      </div>

      <!-- Submit Button -->
      <div class="text-center mt-10">
        <%= form.submit "Update Comment", class: "w-full bg-gradient-to-br from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:focus:ring-blue-800 text-white font-medium py-3 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105" %>
      </div>
    <% end %>

    <!-- Back to Project Link -->
    <div class="text-center mt-10">
      <%= link_to 'Back to Project', project_path(@project), class: 'text-blue-500 hover:underline text-lg' %>
    </div>
  </div>
<% end %>
