<!-- app/views/devise/registrations/edit.html.erb -->
<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-lg p-8 mt-12">
  <h2 class="text-4xl font-bold text-gray-800 mb-8 text-center">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-8") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
      <%= f.label :email, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600 bg-yellow-100 p-4 rounded-lg shadow-md">
        Currently waiting for confirmation for: <strong><%= resource.unconfirmed_email %></strong>
      </div>
    <% end %>

    <!-- Password Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
      <%= f.label :password, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <p class="text-sm text-gray-500 mb-4">(Leave blank if you don't want to change it)</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500 mt-2"><em>Minimum <%= @minimum_password_length %> characters required</em></p>
      <% end %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
      <%= f.label :password_confirmation, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <!-- Current Password Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
      <%= f.label :current_password, class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <p class="text-sm text-gray-500 mb-4">(We need your current password to confirm your changes)</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <!-- Role Selection -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-md">
      <%= f.label :role, "Select Role", class: "block text-lg font-semibold text-gray-700 mb-2" %>
      <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <!-- Submit Button -->
    <div class="text-center mt-8">
      <%= f.submit "Update", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition ease-in-out duration-300 shadow-md" %>
    </div>

  <% end %>

  <!-- Cancel Account Section -->
  <h3 class="text-2xl font-semibold text-gray-800 mt-12 mb-4 text-center">Cancel my account</h3>
  <p class="text-sm text-gray-600 text-center mb-6">Unhappy? You can cancel your account below:</p>
  <div class="text-center">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "w-full bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-4 rounded-lg transition ease-in-out duration-300 shadow-md" %>
  </div>

  <!-- Back Link -->
  <div class="text-center mt-8">
    <%= link_to "Back", :back, class: "text-blue-500 hover:underline text-lg" %>
  </div>
</div>
