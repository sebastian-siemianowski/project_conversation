<!-- app/views/projects/index.html.erb -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-4xl font-bold text-gray-800 mb-12 text-center">Projects</h1>

  <!-- New Project Button -->
  <div class="text-center mb-12">
    <%= link_to 'New Project', new_project_path, class: 'inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-300 ease-in-out' %>
  </div>

  <!-- Projects Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @projects.each do |project| %>
      <div class="bg-white shadow-lg rounded-lg overflow-hidden transform hover:scale-105 transition duration-300 ease-in-out">
        <div class="p-6">
          <!-- Project Title -->
          <h2 class="text-2xl font-semibold mb-4">
            <%= link_to project.title, project_path(project), class: 'text-blue-600 hover:underline' %>
          </h2>

          <!-- Project Description -->
          <p class="text-gray-700 mb-4"><%= truncate(project.description, length: 100) %></p>

          <!-- Project Status -->
          <p class="text-sm text-gray-500 mb-2">Status:
            <span class="inline-block px-2 py-1 <%= status_classes(project.status) %> rounded-md">
              <%= project.status.to_s.humanize %>
            </span>
          </p>

          <!-- Project Creator -->
          <p class="text-sm text-gray-500">Created by: <%= project.user.email %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

