<!-- app/views/projects/_form.html.erb -->
<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
      <h2 class="font-bold mb-2">Please correct the following errors:</h2>
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: 'block text-gray-700' %>
    <%= form.text_field :title, class: 'w-full border rounded p-2' %>
  </div>

  <div class="mb-4">
    <%= form.label :description, class: 'block text-gray-700' %>
    <%= form.text_area :description, class: 'w-full border rounded p-2' %>
  </div>

  <div class="text-center">
    <%= form.submit 'Create Project', class: 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
