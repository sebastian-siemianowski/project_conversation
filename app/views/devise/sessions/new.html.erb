<div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white shadow-2xl rounded-lg p-10 sm:p-12">
    <h2 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">Welcome Back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-8") do |f| %>
      <!-- Email Field -->
      <div class="relative bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
        <label for="email" class="block text-lg font-semibold text-gray-700 mb-3">Email</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.94 2.94A1.5 1.5 0 002 4.5v11A1.5 1.5 0 003.5 17h13a1.5 1.5 0 001.5-1.5v-11a1.5 1.5 0 00-1.5-1.5h-13a1.5 1.5 0 00-1.06.44zM3 4.5a.5.5 0 01.5-.5h13a.5.5 0 01.5.5v1.707l-6.682 4.207a1.5 1.5 0 01-1.636 0L3 6.207V4.5zm0 3.682l5.317 3.358a3.5 3.5 0 003.682 0L17 8.182V14.5a.5.5 0 01-.5.5h-13a.5.5 0 01-.5-.5V8.182z"/>
            </svg>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-300 ease-in-out" %>
        </div>
      </div>

      <!-- Password Field -->
      <div class="relative bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
        <label for="password" class="block text-lg font-semibold text-gray-700 mb-3">Password</label>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 3a3 3 0 00-3 3v3H6a1 1 0 00-1 1v8a1 1 0 001 1h8a1 1 0 001-1v-8a1 1 0 00-1-1h-1V6a3 3 0 00-3-3zm-1 6V6a1 1 0 112 0v3H9z" clip-rule="evenodd"/>
            </svg>
          </span>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-300 ease-in-out" %>
        </div>
      </div>

      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8 flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "mr-2 h-5 w-5 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "text-lg text-gray-700" %>
          </div>
        </div>
      <% end %>

      <!-- Submit Button with Bluish Gradient -->
      <div class="text-center mt-10">
        <%= f.submit "Log In", class: "w-full text-white bg-gradient-to-br from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:focus:ring-blue-800 font-medium py-3 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105" %>
      </div>
    <% end %>

    <!-- Additional Links (e.g., Sign Up, Forgot Password) -->
    <div class="text-center mt-10">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
