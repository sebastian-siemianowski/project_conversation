<%= turbo_frame_tag 'projects_list' do %>
  <% current_project = local_assigns[:project] || @project %>
  <% current_comments = local_assigns[:comments] || @comments %>

  <div class="max-w-4xl mx-auto bg-white shadow-2xl rounded-lg p-10 mt-12 relative">
    <!-- Project Title and Description Section Wrapped in a Turbo Frame -->
    <%= turbo_frame_tag "project_details_#{current_project.id}" do %>
      <div class="bg-gray-100 p-8 rounded-lg mb-10 shadow-inner border relative">
        <!-- Edit Button in Upper Right Corner -->
        <% if current_user.admin? %>
          <button data-project-id="<%= current_project.id %>" class="absolute top-4 right-8 bg-gradient-to-br from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:ring-4 focus:outline-none focus:ring-blue-200 edit-details-button">
            Edit Details
          </button>
        <% end %>

        <!-- Title and Description -->
        <div class="p-8">
          <h1 class="text-5xl font-extrabold text-gray-900 mb-6 text-center"><%= current_project.title %></h1>
          <p class="text-lg text-gray-700 mb-8 leading-relaxed text-center"><%= current_project.description %></p>
        </div>
      </div>

      <!-- Inline Edit Form (Initially Hidden) -->
      <% if current_user.admin? %>
        <div id="edit-details-form-<%= current_project.id %>" class="mt-8 hidden opacity-0 max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
          <%= form_with model: current_project, url: project_path(current_project), method: :patch, data: { turbo_frame: "project_details_#{current_project.id}" }, class: "space-y-4" do |form| %>
            <!-- Title Field -->
            <div>
              <%= form.label :title, class: "block text-lg font-semibold text-gray-700 mb-2" %>
              <%= form.text_field :title, class: "w-full px-5 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
            </div>

            <!-- Description Field -->
            <div>
              <%= form.label :description, class: "block text-lg font-semibold text-gray-700 mb-2" %>
              <%= form.text_area :description, rows: 4, class: "w-full px-5 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
            </div>

            <!-- Buttons -->
            <div class="flex justify-end space-x-4">
              <%= form.submit "Save Changes", class: "bg-gradient-to-br from-green-400 to-lime-500 hover:from-green-500 hover:to-lime-600 text-white font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:ring-4 focus:outline-none focus:ring-green-200" %>
              <button type="button" data-project-id="<%= current_project.id %>" class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out edit-details-button">
                Cancel
              </button>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>

    <!-- Status Section Wrapped in a Turbo Frame -->
    <%= turbo_frame_tag "project_status_#{current_project.id}" do %>
      <div class="bg-gray-100 p-8 rounded-lg mb-10 shadow-inner border">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-2xl font-semibold text-gray-700 mb-3">Current Status:</p>
            <span class="inline-block px-5 py-2 rounded-full text-lg font-semibold <%= status_classes(current_project.status) %>">
              <%= current_project.status.to_s.humanize %>
            </span>
          </div>

          <!-- Edit Status Button for Admins -->
          <% if current_user.admin? %>
            <button data-project-id="<%= current_project.id %>" class="bg-gradient-to-br from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:ring-4 focus:outline-none focus:ring-blue-200 edit-status-button">
              Edit Status
            </button>
          <% end %>
        </div>

        <!-- Inline Status Edit Form (Initially Hidden) -->
        <% if current_user.admin? %>
          <div id="status-edit-form-<%= current_project.id %>" class="mt-6 hidden opacity-0 max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
            <%= form_with model: current_project, url: project_path(current_project), method: :patch, data: { turbo_frame: "project_status_#{current_project.id}" }, class: "space-y-4" do |form| %>
              <div class="flex items-center space-x-4">
                <%= form.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "w-1/2 bg-white border border-gray-300 rounded-lg py-3 px-5 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300" %>
                <%= form.submit "Update Status", class: "bg-gradient-to-br from-green-400 to-lime-500 hover:from-green-500 hover:to-lime-600 text-white font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:ring-4 focus:outline-none focus:ring-green-200" %>
                <button type="button" data-project-id="<%= current_project.id %>" class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out edit-status-button">
                  Cancel
                </button>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Comments Section -->
    <div class="bg-gray-50 shadow-inner rounded-lg p-10">
      <h2 class="text-3xl font-semibold text-gray-800 mb-8">Comments</h2>
      <div id="comments_list" class="space-y-6">
        <% current_comments.each do |comment| %>
          <%= render partial: 'comments/comment', locals: { comment: comment } %>
        <% end %>
      </div>

      <div id="pagination" class="mt-8">
        <%= paginate current_comments %>
      </div>

      <!-- Add Comment Section -->
      <h3 class="text-2xl font-semibold text-gray-800 mt-10 mb-6">Add a Comment</h3>
      <%= turbo_frame_tag 'comment_form' do %>
        <%= render 'comments/form', comment: current_project.comments.build %>
      <% end %>
    </div>
  </div>

  <!-- JavaScript for Inline Editing Toggle -->
  <script>
      document.addEventListener('click', function(event) {
          // Toggle edit details form
          if (event.target.classList.contains('edit-details-button')) {
              const projectId = event.target.dataset.projectId;
              console.log(`toggleEditForm called for project ID: ${projectId}`);

              const editForm = document.getElementById(`edit-details-form-${projectId}`);
              console.log(`Looking for form with ID: edit-details-form-${projectId}`);

              if (editForm) {
                  console.log('Edit form found.');

                  if (editForm.classList.contains('hidden')) {
                      console.log('Form is hidden, showing the form now.');
                      editForm.classList.remove('hidden');
                      editForm.style.maxHeight = editForm.scrollHeight + 'px';
                      editForm.style.opacity = 1;
                  } else {
                      console.log('Form is visible, hiding the form now.');
                      editForm.style.maxHeight = '0';
                      editForm.style.opacity = 0;
                      setTimeout(() => {
                          editForm.classList.add('hidden');
                          console.log('Form hidden.');
                      }, 500); // matches the duration in CSS
                  }
              } else {
                  console.error('Could not find the form element to toggle.');
              }
          }

          // Toggle status edit form
          if (event.target.classList.contains('edit-status-button')) {
              const projectId = event.target.dataset.projectId;
              console.log(`toggleStatusForm called for project ID: ${projectId}`);

              const statusForm = document.getElementById(`status-edit-form-${projectId}`);
              console.log(`Looking for form with ID: status-edit-form-${projectId}`);

              if (statusForm) {
                  console.log('Status form found.');

                  if (statusForm.classList.contains('hidden')) {
                      console.log('Form is hidden, showing the form now.');
                      statusForm.classList.remove('hidden');
                      statusForm.style.maxHeight = statusForm.scrollHeight + 'px';
                      statusForm.style.opacity = 1;
                  } else {
                      console.log('Form is visible, hiding the form now.');
                      statusForm.style.maxHeight = '0';
                      statusForm.style.opacity = 0;
                      setTimeout(() => {
                          statusForm.classList.add('hidden');
                          console.log('Form hidden.');
                      }, 500); // matches the duration in CSS
                  }
              } else {
                  console.error('Could not find the status form element to toggle.');
              }
          }
      });
  </script>
<% end %>
