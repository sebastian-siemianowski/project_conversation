<div id="project_<%= project.id %>" class="relative bg-white shadow-lg rounded-lg overflow-hidden transform hover:scale-105 transition duration-300 ease-in-out">
  <div class="p-6">
    <!-- Project Title -->
    <h2 class="text-2xl font-semibold mb-4">
      <%= link_to project.title, project_path(project), class: 'text-blue-600 hover:underline' %>
    </h2>

    <!-- Project Description -->
    <p class="text-gray-700 mb-4"><%= truncate(project.description, length: 100) %></p>

    <!-- Project Status -->
    <p class="text-sm text-gray-500 mb-2">Status:
      <span class="inline-block px-2 py-1 <%= status_classes(project.status) %> rounded-md">
        <%= project.status.to_s.humanize %>
      </span>
    </p>

    <!-- Project Creator -->
    <p class="text-sm text-gray-500">Created by: <%= project.user.email %></p>

    <!-- Delete Button for Admins -->
    <% if current_user.admin? %>
      <div class="mt-4">
        <!-- Delete Button -->
        <button
          onclick="toggleDeleteConfirmation(<%= project.id %>)"
          class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out shadow-md">
          Delete
        </button>

        <!-- Inline Custom Confirmation Box -->
        <div id="delete-confirmation-<%= project.id %>" class="mt-4 hidden bg-white shadow-md p-4 rounded-lg">
          <p class="text-red-600 mb-4 text-center">Are you sure you want to delete this project?</p>
          <div class="flex justify-center space-x-4">
            <%= link_to 'Yes', project_path(project),
                        data: { turbo_method: :delete },
                        class: 'bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-full transition duration-300 ease-in-out' %>
            <button
              onclick="toggleDeleteConfirmation(<%= project.id %>)"
              class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-2 px-4 rounded-full transition duration-300 ease-in-out">
              No
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Inline JavaScript for Toggle Confirmation -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        window.toggleDeleteConfirmation = function(projectId) {
            const confirmationBox = document.getElementById(`delete-confirmation-${projectId}`);
            if (confirmationBox) {
                confirmationBox.classList.toggle('hidden');
            } else {
                console.error(`Element with ID 'delete-confirmation-${projectId}' not found.`);
            }
        }
    });
</script>
