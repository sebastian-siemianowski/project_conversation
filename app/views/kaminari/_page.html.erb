<span class="page <%= 'current' if page.current? %>">
  <% if page.current? %>
    <span class="inline-block py-2 px-4 mx-1 rounded-full bg-blue-600 text-white font-bold shadow-lg ring-2 ring-blue-300 transform transition duration-300 ease-in-out scale-110">
      <%= page %>
    </span>
  <% else %>
    <%= link_to page, url, remote: remote, rel: page.rel, class: "inline-block py-2 px-4 mx-1 rounded-full bg-blue-100 text-blue-700 hover:bg-blue-200 transition duration-300 ease-in-out shadow-sm" %>
  <% end %>
</span>
