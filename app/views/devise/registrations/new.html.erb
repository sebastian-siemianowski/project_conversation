<div class="max-w-2xl mx-auto bg-white shadow-2xl rounded-lg p-10 mt-16">
  <h2 class="text-4xl font-extrabold text-gray-900 mb-10 text-center">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-8") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :email, class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <!-- Password Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :password, class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500 mb-3">(Minimum <%= @minimum_password_length %> characters)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :password_confirmation, class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <!-- Role Selection Field -->
    <div class="bg-gray-50 p-6 rounded-lg shadow-inner border mb-8">
      <%= f.label :role, "Select Role", class: "block text-lg font-semibold text-gray-700 mb-3" %>
      <%= f.select :role, User.roles.keys.map { |role| [role.humanize, role] }, {}, class: "w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out" %>
    </div>

    <!-- Submit Button with Hover and Scale Effect -->
    <div class="text-center mt-10">
      <%= f.submit "Sign Up", class: "w-full text-white bg-gradient-to-br from-green-400 to-lime-500 hover:from-green-500 hover:to-lime-600 focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800 font-medium py-3 rounded-md shadow-lg transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
  <% end %>

  <!-- Additional Links (e.g., Sign In, Forgot Password) -->
  <div class="text-center mt-10">
    <%= render "devise/shared/links" %>
  </div>
</div>
