<div class="bg-gray-100 p-8 rounded-lg mb-10 shadow-inner border">
  <div class="flex items-center justify-between">
    <div>
      <p class="text-2xl font-semibold text-gray-700 mb-3">Current Status:</p>
      <span class="inline-block px-5 py-2 rounded-full text-lg font-semibold <%= status_classes(project.status) %>">
        <%= project.status.to_s.humanize %>
      </span>
    </div>

    <!-- Edit Status Button for Admins -->
    <% if current_user.admin? %>
      <button data-project-id="<%= project.id %>" class="bg-gradient-to-br from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:ring-4 focus:outline-none focus:ring-blue-200 edit-status-button">
        Edit Status
      </button>
    <% end %>
  </div>

  <!-- Inline Status Edit Form (Initially Hidden) -->
  <% if current_user.admin? %>
    <div id="status-edit-form-<%= project.id %>" class="mt-6 hidden opacity-0 max-h-0 overflow-hidden transition-all duration-500 ease-in-out">
      <%= form_with model: project, url: project_path(project), method: :patch, data: { turbo_frame: "project_status_#{project.id}" }, class: "space-y-4" do |form| %>
        <div class="flex items-center space-x-4">
          <%= form.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "w-1/2 bg-white border border-gray-300 rounded-lg py-3 px-5 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300" %>
          <%= form.submit "Update Status", class: "bg-gradient-to-br from-green-400 to-lime-500 hover:from-green-500 hover:to-lime-600 text-white font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:ring-4 focus:outline-none focus:ring-green-200" %>
          <button type="button" data-project-id="<%= project.id %>" class="bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium py-3 px-6 rounded-lg shadow-lg transition duration-300 ease-in-out edit-status-button">
            Cancel
          </button>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
