<!-- app/views/projects/index.html.erb -->
<h1 class="text-2xl font-bold mb-4">Projects</h1>

<%= link_to 'New Project', new_project_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block' %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @projects.each do |project| %>
    <div class="bg-white shadow-md rounded p-4">
      <h2 class="text-xl font-semibold"><%= link_to project.title, project_path(project), class: 'text-blue-500 hover:underline' %></h2>
      <p class="text-gray-700"><%= truncate(project.description, length: 100) %></p>
      <p class="text-sm text-gray-500">Status: <%= project.status.capitalize %></p>
      <p class="text-sm text-gray-500">Created by: <%= project.user.email %></p>
    </div>
  <% end %>
</div>
